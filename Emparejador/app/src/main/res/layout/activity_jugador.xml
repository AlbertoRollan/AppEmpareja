<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:text="Introduzca el jugador"
        android:id="@+id/EtiquetaInJugador"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/BnCantidadJ"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre/Nick Jugador: "
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/EtNombreJugador"
            android:hint="Nombre"
            android:textSize="30sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo/Club/Clan:"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:layout_weight="0.5" />

        <EditText
            android:layout_width="496dp"
            android:layout_height="wrap_content"
            android:id="@+id/EtClub"
            android:textSize="30sp"
            android:hint="Club"
            android:layout_weight="0.03" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercito:"
            android:id="@+id/textView4"
            android:textSize="30sp"
            android:layout_weight="0.5" />

        <EditText
            android:layout_width="496dp"
            android:layout_height="wrap_content"
            android:id="@+id/EtFaccion"
            android:textSize="30sp"
            android:hint="Faccion"
            android:layout_weight="0.03" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="163dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº ITS:"
            android:id="@+id/textView3"
            android:textSize="30sp"
            android:layout_weight="0.2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/EtIts"
            android:layout_weight="0.076"
            android:hint="ITS"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="219dp"
            android:layout_height="109dp"
            android:text="Añadir"
            android:id="@+id/BnAnadirJugador"
            android:textSize="30sp"
            android:layout_weight="1" />

        <Button
            android:layout_width="219dp"
            android:layout_height="109dp"
            android:text="Añadir Bye"
            android:id="@+id/BnAnadirBye"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>